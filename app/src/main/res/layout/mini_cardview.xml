<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#02FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_mini_card"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/miniCardCiudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:fontFamily="@font/roboto_light"
                android:text="Valencia"
                android:textColor="#303F9F"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/miniCardEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/miniCardCiudad"
                android:layout_alignStart="@id/miniCardCiudad"
                android:text="Comunidad Valenciana"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/miniCardPais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/miniCardEstado"
                android:layout_alignStart="@id/miniCardCiudad"
                android:layout_marginBottom="8dp"
                android:text="EspaÃ±a"
                android:textSize="16dp" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>